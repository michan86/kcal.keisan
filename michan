<body>

  <h1>ダイエットコーチみっちゃん<br>カロリー診断</h1>

  <label for="gender">性別</label>
  <select id="gender">
    <option value="male">男性</option>
    <option value="female">女性</option>
  </select>

  <label for="age">年齢</label>
  <input type="number" id="age" placeholder="例：26">

  <label for="height">身長（cm）</label>
  <input type="number" id="height" placeholder="例：170">

  <label for="weight">体重（kg）</label>
  <input type="number" id="weight" placeholder="例：65">

  <label for="activity">活動レベル</label>
  <select id="activity">
    <option value="1.3">低い（デスクワーク中心、運動なし）</option>
    <option value="1.5">中くらい（週に2〜3回運動）</option>
    <option value="1.8">高い（毎日運動・体を動かす仕事）</option>
  </select>

  <button onclick="calculate()">診断する</button>

  <div class="result" id="result" style="display:none;"></div>

  <script>
    function calculate() {
      const gender = document.getElementById('gender').value;
      const age = parseInt(document.getElementById('age').value);
      const height = parseFloat(document.getElementById('height').value);
      const weight = parseFloat(document.getElementById('weight').value);
      const activity = parseFloat(document.getElementById('activity').value);

      let bmr;
      if (gender === 'male') {
        bmr = 13.397 * weight + 4.799 * height - 5.677 * age + 88.362;
      } else {
        bmr = 9.247 * weight + 3.098 * height - 4.330 * age + 447.593;
      }

      const tdee = bmr * activity;
      const cut = tdee - 500;
      const bulk = tdee + 300;

      const heightMeter = height / 100;
      const bmi = weight / (heightMeter * heightMeter);

      let bmiMessage = "";
      if (bmi < 18.5) {
        bmiMessage = "（やせ型）";
      } else if (bmi < 25) {
        bmiMessage = "（標準）";
      } else if (bmi < 30) {
        bmiMessage = "（肥満気味）";
      } else {
        bmiMessage = "（肥満）";
      }

      const result = `
        <h2>診断結果</h2>
        <p>あなたのBMIは <strong>${bmi.toFixed(1)}</strong> ${bmiMessage} です。</p>
        <p>あなたの基礎代謝は <strong>${Math.round(bmr)} kcal</strong> です。</p>
        <p>あなたの1日の推定消費カロリー（TDEE）は <strong>${Math.round(tdee)} kcal</strong> です。</p>
        <p>● ダイエットをしたい方は、<strong>${Math.round(cut)} kcal</strong> を目安にしましょう。</p>
        <p>● 増量したい方は、<strong>${Math.round(bulk)} kcal</strong> を目指してみてくださいね。</p>
        <p>無理のない範囲で、少しずつ食事と生活習慣を整えていきましょう😊</p>
      `;
      document.getElementById('result').i
